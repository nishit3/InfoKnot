<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4385EC"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="                 Email Address"
            android:drawableStart="@drawable/ic_email"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_gravity="start"/>

    </Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/email_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="280dp"
            android:layout_marginRight="12dp"
            android:hint="New Email Address"
            android:inputType="textEmailAddress"
            android:minHeight="48dp">

        </EditText>

        <Button
            android:id="@+id/change_pp_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="130dp"
            android:layout_marginRight="12dp"
            android:background="@color/signatureheadercolr"
            android:hint="Apply Change"
            android:text="Apply CHANGE"
            android:textColorHint="@color/white"
            android:textColor="@color/white">

        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="*New Email Would Not Be Saved Until Verified Via Email"
            android:textColor="#95EC0C0C"
            android:textSize="14sp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="*Immediate Login With New Email (After Verification Of New Email)  Will Be Required"
            android:textColor="#95EC0C0C"
            android:textSize="14sp">

        </TextView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>