<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/wheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="2022 13th International Workshop on the Electromagnetic Compatibility of Integrated Circuits (EMC Compo)"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/wdatformat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="8 - 11 March 2022  |  Bruges, Belgium  |  Event Format: In-person"
            android:textSize="17sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sponso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="top"
                android:padding="10dp"
                android:text="Sponsors:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/wsponsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/sponso"
                android:gravity="center"
                android:text=" IEEE Electromagnetic Compatibility Society; KU Leuven Bruges Campus"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wsponsers"
                android:layout_marginTop="9dp"
                android:gravity="top"
                android:padding="10dp"
                android:text="field of Interest: "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/wfoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/wsponsers"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/field"
                android:gravity="start"
                android:text="    fields, Waves and Electromagnatic"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>


    </LinearLayout>
</RelativeLayout>