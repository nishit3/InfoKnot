<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEEEE"
    tools:context=".MainActivity">

    <Toolbar
        android:id="@+id/toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dbaaba"
        android:elevation="4dp"
        tools:ignore="MissingConstraints">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="            Font Settings"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_gravity="center" />


    </Toolbar>

    <Button
        android:id="@+id/textView18"
        android:layout_width="389dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="#fbeeee"
        android:backgroundTint="#fbeeee"
        android:drawableStart="@drawable/ic_dark"
        android:gravity="center_vertical"
        android:text="    CUSTOM SIZE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <Button
        android:id="@+id/textView17"
        android:layout_width="389dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:background="#fbeeee"
        android:backgroundTint="#fbeeee"
        android:drawableStart="@drawable/ic_fontcol"
        android:gravity="center_vertical"
        android:text="    FONT COLOURS"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/textView16"
        android:layout_width="389dp"
        android:layout_height="59dp"
        android:layout_marginTop="14dp"
        android:background="#fbeeee"
        android:backgroundTint="#fbeeee"
        android:drawableStart="@drawable/ic_fontsize"
        android:gravity="center_vertical"
        android:text="    FONT SIZE"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>
