<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilephotochange">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/account_pp_show"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="127dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/infoknotlogo"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp" />

    <Button
        android:id="@+id/selectprofileimg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="460dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/border"
        android:text="Select  profile  photo"
        android:textSize="13sp" />

    <Button
        android:id="@+id/change_pp_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="560dp"
        android:layout_marginRight="12dp"
        android:background="@color/signatureheadercolr"
        android:hint="Apply Change"
        android:text="Apply CHANGE"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

</RelativeLayout>